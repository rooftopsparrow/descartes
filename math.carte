SUM     := 1;
EPSILON := 0.000001;
K       :=1;
LOOP MAINLOOP:
    I     :=1;
    term  :=1;
    LOOP FACTORIAL:
        TERM := TERM * I;
        I    := I+1;
        IF I>K THEN BREAK FI
    REPEAT;
    NEWSUM    := SUM + 1/TERM;
    IF SUM - NEWSUM < EPSILON AND NEWSUM - SUM < EPSILON THEN
         RESULT := NEWSUM;
         BREAK MAINLOOP
    ELSE SUM   := NEWSUM;  K := K + 1    FI
REPEAT;
PRINT RESULT .